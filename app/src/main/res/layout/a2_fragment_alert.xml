<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:bottomRightRadius="10dp"
    android:paddingBottom="10dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/SomeText"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:minHeight="48dp"
        android:textSize="14sp"
        android:padding="04dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginStart="08dp"
        android:layout_marginEnd="08dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/WriteCode"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:padding="04dp"
        android:fontFamily="sans-serif"
        android:hint="Write Code Here"
        android:gravity="center"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="14sp"
        android:layout_marginTop="08dp"
        app:layout_constraintEnd_toEndOf="@+id/SomeText"
        app:layout_constraintStart_toStartOf="@+id/SomeText"
        app:layout_constraintTop_toBottomOf="@+id/SomeText"/>

    <Button
        android:id="@+id/Submit"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/teal_200"
        android:background="@drawable/blue_corners"
        android:fontFamily="sans-serif"
        android:text="Submit"
        android:paddingStart="360dp"
        android:paddingEnd="12dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WriteCode" />

</androidx.constraintlayout.widget.ConstraintLayout>